
@{
    ViewBag.Title = "Update_Car_View";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@model STORE_APP.Models.Entity.CARS
@*                  ActionResult        Controller *@
@using (Html.BeginForm("Update_Car", "Cars_", FormMethod.Post))
{

    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <!-- jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- jQuery UI (Including datepicker) -->
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">


        <div style="margin-bottom:15px"></div>
        <label>Car Id</label>
        @Html.TextBoxFor(k => k.CAR_ID, new { @class = "form-control" })
        <br />
        <div style="margin-bottom:15px"></div>
        <label>Car Category Id</label>
        @Html.DropDownListFor(k => k.CARS_CATEGORY.CAR_CATEGORY_ID, (List<SelectListItem>)ViewBag.listCarCategoryView, new { @class = "form-control" })
        <br />
        <div style="margin-bottom:15px"></div>
        <label>Shassis Code</label>
        @Html.TextBoxFor(k => k.CAR_SHASSIS_CODE, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CAR_SHASSIS_CODE, "", new { @style = "color:red" })
        <br />
        <div style="margin-bottom:15px"></div>
        <label>Number Plate</label>
        @Html.TextBoxFor(k => k.CAR_NUMBER_PLATE, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CAR_NUMBER_PLATE, "", new { @style = "color:red" })
        <br />
    </div>
    @* Activity *@
    <div style="margin-top:15px">
        <datalist id="Activity">
            <option value="1">
            <option value="0">
        </datalist>
        <label>Activity</label>
        <input type="text" class="form-control" name="IS_ACTIV"
               list="Activity" />
        @Html.ValidationMessageFor(x => x.IS_ACTIV, "", new { @style = "color:red" })
    </div>

    <div style="margin-top:15px">
        <label>DATE</label>
        <input type="text" id="datepicker" class="form-control" name="U_DATE"
               value="@DateTime.Now.ToShortDateString()" />
        <script>
            $(function () {
                $("#datepicker").datepicker({ dateFormat: "dd/mm/yy" });
            });
        </script>
    </div>

    <div style="margin-top:15px"><button class="btn btn-warning">Update</button></div>
}
